name: Otto Commission Sync

on:
  schedule:
    - cron: '0 8 * * *'  # Daily at 08:00 UTC
  workflow_dispatch:

jobs:
  sync:
    runs-on: ubuntu-22.04  # Фиксированная версия вместо latest для стабильности
    timeout-minutes: 10    # Ограничение времени выполнения

    steps:
    - name: Checkout code
      uses: actions/checkout@v4
      with:
        fetch-depth: 1     # Ускоряет checkout, загружая только последний коммит

    - name: Set up Python 3.10
      uses: actions/setup-python@v4
      with:
        python-version: '3.10'
        cache: 'pip'       # Включает кэширование pip

    - name: Cache Python dependencies
      uses: actions/cache@v3
      with:
        path: ~/.cache/pip
        key: ${{ runner.os }}-pip-${{ hashFiles('**/requirements.txt') }}
        restore-keys: |
          ${{ runner.os }}-pip-

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install pandas==2.0.3 sqlalchemy==2.0.19 pymysql==1.1.0 gspread==5.11.0 google-auth==2.22.0
        # Фиксированные версии для стабильности

    - name: Run sync script
      env:
        GDRIVE_FOLDER_ID: ${{ secrets.GDRIVE_FOLDER_ID }}
        GDRIVE_CREDS: ${{ secrets.GDRIVE_CREDS }}
        DB_USER: ${{ secrets.DB_USER }}
        DB_PASSWORD: ${{ secrets.DB_PASSWORD }}
        DB_HOST: ${{ secrets.DB_HOST }}
        DB_NAME: ${{ secrets.DB_NAME }}
      run: |
        echo "Starting sync..."
        python commision.py
        echo "Sync completed"

    - name: Upload logs (if needed)
      if: always()
      uses: actions/upload-artifact@v3
      with:
        name: execution-logs
        path: |
          *.log
          *.csv
